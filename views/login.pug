extends layout

block content
  h2.page-header Login
  p Please login below
  form(method='post',action='/users/login')
    .form-group
     label Email
     input.form-control(name='username', type='text', placeholder='Enter name')
    .form-group
     label Password
     input.form-control(name='password', type='password', placeholder='Enter name')
    input.btn.btn-primary(type='submit',name='submit',value='Login')
