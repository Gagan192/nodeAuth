extends layout


block content
  div(id="mySidenav" class="sidenav" style="background-color:white")
    div(id="messages1" style="height: 79vh; overflow: auto")
      each val in retrieveMessages
        if val.ImpTag
          li(id=val._id style="list-style:none" class="impMessageStyle")
            div.panel.rounded
              i(style="color:grey;font-size:smaller")
                b=val.authName + ' '
                span=val.date
              br
              b=val.message
              br
              span(class="btn btn-info btn-sm fa fa-thumbs-up upvote imp" id=val._id)=' ' + val.like


  div(class="modal fade" id="myModal" role="dialog")
   div(class="modal-dialog")
     div(class="modal-content")
       div(class="modal-header")
         h4(class="modal-title") Todays ProBlem
         button(type="button" class="close" data-dismiss="modal") &times;
       div(class="modal-body")
         p #{question.problem}
       div(class="modal-footer")
         button(type="button" class="btn btn-default" data-dismiss="modal") Close

  div(id="main" class="container")
    div(id="messages" style="height: 79vh; overflow: auto")
      each val in retrieveMessages
        li(id=val._id style="list-style:none" class="impMessageStyle")
          div.panel.rounded
            i(style="color:grey;font-size:smaller")
              b=val.authName + '  '
              span=val.date + '   '
            br
            b=val.message
            if val.ImpTag
              br
              span(class="btn btn-info btn-sm fa fa-thumbs-up upvote normal" id=val._id)=' ' + val.like


